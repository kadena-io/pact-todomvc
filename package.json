{
  "name": "pact-todomvc",
  "version": "1.0.0",
  "description": "a demo of what a todomvc looks like in a smart contract langauge",
  "repository": {
    "type": "git",
    "url": "github.com/kadena-io/pact-todomvc"
  },
  "scripts": {
